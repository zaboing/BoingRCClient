<Window x:Class="JSONEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:JSONEditor"
        Title="MainWindow" Height="350" Width="525" Name="Win" ResizeMode="NoResize">
    <Window.Resources>
        <conv:RemoveConverter x:Key="RemoveConv" />
    </Window.Resources>
    <Grid>
        <DataGrid Name="CommandGrid" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Height="219" Width="240" 
                  ItemsSource="{Binding ElementName=Win, Path=Commands}" ColumnWidth="1*" AutoGeneratedColumns="CommandGrid_AutoGeneratedColumns"/>
        <DataGrid Name="AliasGrid" HorizontalAlignment="Right" Margin="0,38,10,0" VerticalAlignment="Top" Height="219" Width="240" 
                  ItemsSource="{Binding ElementName=Win, Path=Aliases}" ColumnWidth="1*" AutoGeneratedColumns="AliasGrid_AutoGeneratedColumns"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="10,262,0,0" VerticalAlignment="Top" Width="75" Click="Add_Command_Click"/>
        <Button Content="Remove" HorizontalAlignment="Left" Margin="175,262,0,0" VerticalAlignment="Top" Width="75" 
                IsEnabled="{Binding ElementName=CommandGrid, Path=SelectedIndex, Converter={StaticResource RemoveConv}}" Click="Remove_Command_Click"/>
        <Button Content="Add" HorizontalAlignment="Right" Margin="0,262,174,0" VerticalAlignment="Top" Width="76" Click="Add_Alias_Click"/>
        <Button Content="Remove" HorizontalAlignment="Right" Margin="0,262,10,0" VerticalAlignment="Top" Width="75"
                IsEnabled="{Binding ElementName=AliasGrid, Path=SelectedIndex, Converter={StaticResource RemoveConv}}" Click="Remove_Alias_Click"/>
        <TextBlock HorizontalAlignment="Left" Height="23" Margin="10,15,0,0" TextWrapping="Wrap" Text="Commands" VerticalAlignment="Top" Width="120" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Right" Height="23" Margin="0,15,10,0" TextWrapping="Wrap" Text="Aliases" VerticalAlignment="Top" Width="240" FontWeight="Bold"/>
    </Grid>
</Window>
